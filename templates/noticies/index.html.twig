{% extends 'base.html.twig' %}

{% block title %}Las noticias{% endblock %}

{% block body %}

    <h1 class="text-center text-white mt-5 mb-5">Noticias</h1>
    {% for noticia in noticias %}
        <div class="row justify-content-center mb-5">
            <div class="col-md-12 " style="width: 75%;">
                <div class="col-md-12">
                    <div class="row justify-content-center">
                        <div class="card rounded mb-3 mt-3" style="background-color: #1F1F20;">
                            <div class="row no-gutters">
                                <div class="col-md-4">
                                    <div class="card-img rounded" style="background-image: url('{{ noticia.urlToImage }}');background-size: 300px auto; background-position: center;; height: 100%;background-repeat: no-repeat; display: flex; align-items: center;">

                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h4 class="card-title text-white">{{ noticia.title }}</h4>
                                        <h6 class="card-subtitle mb-2 text-white-50">Política</h6>
                                        <p class="card-text text-white">
                                            {{ noticia.description }}
                                        </p>
                                        <div class="text-right"><a href="{{ noticia.url }}">Leer más</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

{% endblock %}
