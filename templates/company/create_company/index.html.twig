{% extends 'base.html.twig' %}

{% block title %}Crear empresa{% endblock %}

{% block body %}
    <section style="margin-top: 1rem;margin-bottom: 1rem;">
        <h1 class="text-center text-capitalize" style="color: rgb(255,255,255);margin-top: 1rem;">Crear tu empresa</h1>
        <div class="container" style="background-color:#232325; border-radius: 30px; padding-top:10px; padding-bottom:10px;">
            {{ form_start(form) }}
            <div class="form-group mb-3">
                <div class="row">
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4 col-xxl-4 offset-lg-2 offset-xl-2 offset-xxl-2">
                        <p style="color: #ffffff;">
                            <strong>Nombre de la empresa</strong>
                            {{ form_widget(form.name) }}
                        </p>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4 col-xxl-4">
                        <p style="color: #ffffff;">
                            <strong>Categoria de la empresa</strong>
                            {{ form_widget(form.CompanyTypeID) }}
                        </p>
                    </div>
                </div>
            </div>
            <div class="form-group mb-3" style="color: #ffffff;">
                <div class="row">
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4 col-xxl-4 offset-lg-2 offset-xl-2 offset-xxl-2">
                        <p style="color: #ffffff;">
                            <strong>Sube tu imagen</strong>&nbsp;
                            {{ form_widget(form.url_image) }}
                        </p>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4 col-xxl-4" style="color: #ffffff;">
                        <p style="color: #ffffff;">
                            <strong>Localidad</strong>
                            {{ form_widget(form.location) }}
                        </p>
                    </div>
                </div>
            </div>
            <div>
                <div class="row">
                    <div class="col-lg-8 col-xl-8 col-xxl-8 offset-lg-2 offset-xl-2 offset-xxl-2"
                         style="color: #ffffff; margin-bottom:10px">
                        <p style="color: #ffffff;">
                            <strong>Descripción de la empresa</strong>&nbsp
                            {{ form_widget(form.description) }}
                        </p>
                    </div>
                </div>
            </div>
            <div class="form-group mb-3" style="color: #ffffff;">
                <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 col-xxl-8 offset-lg-2 offset-xl-2 offset-xxl-2">
                        <p style="color: #ffffff;">
                            <strong>Página web</strong>
                        </p>
                        {{ form_widget(form.url_web) }}
                    </div>
                </div>
            </div>
            <div class="justify-content-center d-flex form-group mb-3">
                <div id="submit-btn">
                    <div class="row">
                        {{ form_widget(form.submit) }}
                    </div>
                </div>
            </div>
            {{ form_end(form) }}

        </div>
    </section>
{% endblock %}
